{
  "compilerOptions": {
    "target": "ES6",                                
    "lib": ["dom"],
    "module": "commonjs",                               
    "moduleResolution": "node",
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node"],
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["packages/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
