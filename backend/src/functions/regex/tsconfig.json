{
  "compilerOptions": {
    "target": "ES2017",                                
    "lib": ["dom"],                                  
    "module": "commonjs",                             
    "moduleResolution": "node",
    "baseUrl": "./",
    "rootDir": "./src",                             
    "outDir": "./dist",                             
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node"],
    "allowJs": false,                                
    "noImplicitAny": true
  },        
  "include": ["*.ts", "**/*.ts"],              
  "exclude": ["node_modules"]
}
